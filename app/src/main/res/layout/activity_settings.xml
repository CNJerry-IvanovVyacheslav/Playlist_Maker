<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.PlaylistMaker"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/back_light"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/back_light"
            android:clickable="true"/>

        <TextView
            style="@style/PageTitle"
            android:layout_gravity="center_vertical"
            android:text="@string/settings"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/black_theme" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/shareTheApp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/share" />
        <ImageView
            style="@style/IconInSettings"
            android:src="@drawable/share_light" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/writeInSupport"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/support" />
        <ImageView
            style="@style/IconInSettings"
            android:src="@drawable/support_light"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/IconInSettings"
            android:src="@drawable/forward_light"/>

    </FrameLayout>
</LinearLayout>