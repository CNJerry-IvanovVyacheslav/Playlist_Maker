<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    tools:context=".settings.ui.activity.SettingsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/back_light"
            style="@style/BackArrowColor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:src="@drawable/back_light"
            android:visibility="gone"/>

        <TextView
            style="@style/PageTitle"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/search_bar_8dp"
            android:text="@string/settings" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="24dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/black_theme" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/SwitchColor" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/shareTheApp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/share" />

        <ImageView
            style="@style/IconInSettings"
            android:src="@drawable/share_light" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/writeInSupport"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/support" />

        <ImageView
            style="@style/IconInSettings"
            android:src="@drawable/support_light" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/agreement"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            style="@style/SettingsMenu"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/IconInSettings"
            android:src="@drawable/forward_light" />

    </FrameLayout>
</LinearLayout>