<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker">

    <Button
        style="@style/FunctionalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:text="@string/new_playlist_button"
        android:visibility="visible" />

    <TextView
        android:id="@+id/placeholderNotFound"
        style="@style/PlaceholderStyle"
        android:layout_marginTop="@dimen/dimens_48dp"
        android:text="@string/no_playlists"
        android:visibility="visible"
        app:drawableTopCompat="@drawable/nothing_was_found" />

</LinearLayout>