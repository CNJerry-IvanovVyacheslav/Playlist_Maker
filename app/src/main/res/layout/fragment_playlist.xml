<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playlistFragmentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/dimens_16dp"
    android:paddingEnd="@dimen/dimens_16dp"
    android:theme="@style/Theme.PlaylistMaker"
    tools:context="com.melongame.playlistmaker.media.ui.activity.LibraryFragment">

    <Button
        android:id="@+id/newPlaylistButton"
        style="@style/FunctionalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_24dp"
        android:text="@string/new_playlist_button"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingTop="@dimen/dimens_16dp"
        android:paddingBottom="@dimen/dimens_16dp"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/placeholderNotFound"
        style="@style/PlaceholderStyle"
        android:layout_marginTop="@dimen/dimens_48dp"
        android:text="@string/no_playlists"
        android:visibility="visible"
        app:drawableTopCompat="@drawable/nothing_was_found" />

</LinearLayout>