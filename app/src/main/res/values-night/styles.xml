<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/default_for_title</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="SettingsMenu">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">21dp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/default_for_text</item>
    </style>

    <style name="IconInSettings">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="PageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_for_title</item>
    </style>

    <style name="SearchBar">
        <item name="drawableStartCompat">@drawable/search_bar_icon</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:hint">@string/search</item>
        <item name="android:background">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColorHint">@color/black_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BackArrowColor">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SetColorForText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SetBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="BaseForSearchBar">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/search_edit_text_background_white</item>
    </style>

    <style name="TracksLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/black_text</item>
    </style>

    <style name="TracksLinearLayout.vertical" parent="TracksLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TracksImage">
        <item name="android:layout_width">@dimen/dimens_44dp</item>
        <item name="android:layout_height">@dimen/dimens_44dp</item>
        <item name="android:layout_margin">@dimen/search_bar_8dp</item>
        <item name="android:layout_gravity">center_vertical|center</item>
    </style>

    <style name="TracksArrow">
        <item name="android:layout_width">@dimen/dimens_24dp</item>
        <item name="android:layout_height">@dimen/dimens_24dp</item>
        <item name="android:layout_gravity">center_vertical|center</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:src">@drawable/forward_light</item>
    </style>

    <style name="TracksText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_for_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TracksText.artist" parent="TracksText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/default_dor_small_text</item>
    </style>

    <style name="TracksText.time" parent="TracksText.artist">
        <item name="drawableLeftCompat">@drawable/dot</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="SearchText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dimens_20sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SearchImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimens_102dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="SearchButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="BackArrowButton">
        <item name="android:layout_width">@dimen/dimens_48dp</item>
        <item name="android:layout_height">@dimen/dimens_48dp</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/back_light</item>
    </style>

    <style name="PlayerAnotherText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="PlayerRightParam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dimens_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="PlayerLeftParam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimens_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dimens_14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>

    </style>

    <style name="SwitchColor" parent="Theme.AppCompat.Light">
        <item name="thumbTint">@color/background_light</item>
        <item name="android:colorForeground">@color/grey_icon</item>

    </style>

    <style name="FunctionalButton" parent="PlayerAnotherText">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:backgroundTint">?attr/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/dimens_54dp</item>
    </style>

    <style name="PlaceholderStyle" parent="SearchText">
        <item name="android:layout_marginTop">@dimen/dimens_108dp</item>
        <item name="android:drawablePadding">@dimen/dimens_16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>
</resources>